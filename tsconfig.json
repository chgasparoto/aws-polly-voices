{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "lib": ["es2018"],
    "outDir": "./dist",
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "sourceMap": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
